FROM node:20-alpine
WORKDIR /app

COPY package*.json ./
# Configure npm for better network resilience
RUN npm config set fetch-retry-maxtimeout 600000 \
    && npm config set fetch-retries 5 \
    && npm config set fetch-retry-mintimeout 10000 \
    && npm install

COPY . .

EXPOSE 3000

# Start Vite dev server
CMD ["npm", "run", "dev"]
